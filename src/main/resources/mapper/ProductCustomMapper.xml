    <result column="brand" jdbcType="VARCHAR" property="brand" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <collection property="images" ofType="java.lang.String">
      <result column="image"/>
    </collection>
  </resultMap>
  <sql id="Base_Column_List">
    id, url, back_user_id, name, description, image, price, original_price, discount_price, 
    stock, brand, status, gmt_create, gmt_modified, remark
  </sql>
  <sql id="product_where">
    <if test="backUserId!=null and backUserId!=''">
      AND back_user_id=#{backUserId}
    </if>
    <if test="name!=null and name!=''">
      AND name like concat('%',#{name},'%')
    </if>
  </sql>
  <select id="queryByUrl" parameterType="java.lang.String" resultMap="BaseResultMap">
    SELECT
      <include refid="Base_Column_List"/>
    FROM product
    WHERE url=#{url}
  </select>
  <insert id="insertSelective" parameterType="com.msj.common.entity.Product">
    <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
      SELECT LAST_INSERT_ID() AS id
    </selectKey>
    insert into product
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="url != null">
        url,
      </if>
      <if test="backUserId != null">
        back_user_id,
      </if>
      <if test="name != null">
        name,
      </if>
      <if test="description != null">
        description,
      </if>
      <if test="image != null">
        image,
      </if>
      <if test="price != null">
        price,
      </if>
      <if test="originalPrice != null">
        original_price,
      </if>
      <if test="discountPrice != null">
        discount_price,
      </if>
      <if test="stock != null">
        stock,
      </if>
      <if test="brand != null">
        brand,
      </if>
      <if test="status != null">
        status,
      </if>
      <if test="gmtCreate != null">
        gmt_create,
      </if>
      <if test="gmtModified != null">
        gmt_modified,
      </if>
      <if test="remark != null">
        remark,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=INTEGER},
      </if>
      <if test="url != null">
        #{url,jdbcType=VARCHAR},
      </if>
      <if test="backUserId != null">
        #{backUserId,jdbcType=INTEGER},
      </if>
      <if test="name != null">
        #{name,jdbcType=VARCHAR},
      </if>
      <if test="description != null">
        #{description,jdbcType=VARCHAR},
      </if>
      <if test="image != null">
        #{image,jdbcType=VARCHAR},
      </if>
